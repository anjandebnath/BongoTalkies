<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    app:startDestination="@id/users_list">

    <fragment
        android:id="@+id/users_list"
        android:name="com.assignment.bongotalkies.views.top_movie.MovieListFragment"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_users_list_to_user_details"
            app:destination="@id/user_details">
            <argument
                android:name="userId"
                app:argType="integer"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/user_details"
        android:name="com.assignment.bongotalkies.views.movie_details.MovieDetailsFragment"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="userId"
            app:argType="integer" />
            <!--  pass data to fragment      -->
    </fragment>

</navigation>

